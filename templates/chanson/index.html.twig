{% extends 'base.html.twig' %}

{% block title %}Hello ChansonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper row">

<a class="btn btn-primary" href="{{ path('app_chanson_ajouter')}}">Ajouter une chanson</a>

    {% for chanson in chansons %}
    <div class="card w-100 m-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{chanson.titre}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{chanson.auteur}}</h6>
            <p class="card-text">{{chanson.paroles}}</p>
            <div class="btn-group" role="group" aria-label="Basic outlined example">
            <a class="btn btn-outline-primary" href="{{ path('app_chanson_detail', {'id': chanson.id} )}}" class="card-link">DÃ©tail</a>
            <a class="btn btn-outline-primary" href="{{ path('app_chanson_modifier', {'id': chanson.id} )}}" class="card-link">Modifier</a>
            <a class="btn btn-danger" href="{{ path('app_chanson_supprimer', {'id': chanson.id} )}}" class="card-link">Supprimer</a>
            </div>    
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
