{% extends 'base.html.twig' %}

{% block title %}Hello ChansonController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper row">
<h1>Détail de la Chanson :</h1>
<p>Titre : {{ chanson.titre }}</p>
<p>Nom de l'Album : {{ chanson.nomAlbum }}</p>
<p>Paroles : {{ chanson.paroles }}</p>
<p>Auteur : {{ chanson.auteur }}</p>
<p>Date d'ajout : {{ chanson.dateAjout|date("m/d/Y") }}</p>
<p>Date de sortie : {{ chanson.dateSortie|date("m/d/Y") }}</p>
<p>Categorie : {{ chanson.genre }}</p>
<a href="{{path('app_chanson')}}">Revenir en arrière</a>
</div>
{% endblock %}
