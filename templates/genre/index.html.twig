{% extends 'base.html.twig' %}

{% block title %}Hello GenreController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a class="btn btn-primary" href="#">Ajouter une categorie</a>

    <table class="mt-3 table table-border table-success table-striped table-hover">
        <thead>
            <tr class=>
                <th>Nom</th>
                <th>Decription</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>   
                <th>{{genre.nom}}</th>
                <th>{{genre.description}}</th>
                <th><a class = "btn btn-primary" href ="#">Modifier</a></th>
            </tr>   
         {% endfor %}
        </tbody>
    </table>   
</div>
{% endblock %}
